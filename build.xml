<project>

  <!-- This presetdef doesn't really work because it complains
       when the jar target is attempted. -->
  <presetdef name=".javac">
    <javac includeantruntime="false" />
  </presetdef>

  <target name="clean">
    <delete dir="build"/>
  </target>

  <target name="compile">
    <mkdir dir="build/classes"/>
    <javac srcdir="src" destdir="build/classes" includeantruntime="false"/>
  </target>

  <target name="jar" depends="compile">
    <mkdir dir="build/jar"/>
    <delete file="build/jar/Dashboard.jar"/>
    <jar destfile="build/jar/Dashboard.jar">
      <fileset dir="build/classes"/>
      <fileset dir="res"/>
      <manifest>
        <attribute name="Main-Class" value="dashboard.App"/>
      </manifest>
    </jar>
  </target>

  <target name="run" depends="jar">
    <java jar="build/jar/Dashboard.jar" fork="true"/>
  </target>

  <target name="server">
    <java classpath="build/jar/Dashboard.jar" classname="dashboard.server.Server" fork="true"/>
  </target>

  <target name="client">
    <java classpath="build/jar/Dashboard.jar" classname="dashboard.client.Client" fork="true"/>
  </target>

</project>
